{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react"
  },
  "exclude": [
    "**/dist/**",
    "test/**",
    "data/**",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
