{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    // "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react"
  },
  "exclude": [
    "test/**",
    "data/**",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
